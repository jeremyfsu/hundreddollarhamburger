<p id="notice"><%= notice %></p>

<h1>Listing Airports</h1>
<%= paginate @airports %>
<table>
  <thead>
    <tr>
      <th>Airport</th>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>Lat</th>
      <th>Lon</th>
      <th>Elev</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airports.each do |airport| %>
      <tr>
        <td><%= airport.airport_id %></td>
        <td><%= airport.name %></td>
        <td><%= airport.city %></td>
        <td><%= airport.state %></td>
        <td><%= airport.lat %></td>
        <td><%= airport.lon %></td>
        <td><%= airport.elev %></td>
        <td><%= link_to 'Show', airport %></td>
        <td><%= link_to 'Edit', edit_airport_path(airport) %></td>
        <td><%= link_to 'Destroy', airport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

